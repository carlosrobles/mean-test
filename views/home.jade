extends layout

block content
    .container-fluid(ng-app='Comparator')
        .row(ng-controller='ParametersController')
            .col-md-3
                .panel.panel-default
                    .panel-heading Quick filters
                    .panel-body
                        .container-fluid
                            .row
                                .col-md-12
                                    div(ng-repeat='quickFilter in quickFilters')
                                        .checkbox
                                            label
                                                input(type='checkbox', value='{{quickFilter.value}}')
                                                {{quickFilter.label}}
            .col-md-6
                .panel.panel-default
                    .panel-heading Search parameters
                    .panel-body
                        .container-fluid
                            .row
                            form
                                .col-md-6
                                    label Credit card type
                                    select.form-control
                                        option 1
                                        option 2
                                        option 3
                                    br
                                    label Monthly salary
                                        input.form-control
                                .col-md-6
                                    label Email address
                                    input.form-control
            .col-md-3
                .container-fluid
                    .row
                        .panel.panel-default
                            .panel-heading Providers
                            .panel-body
                                .container
                                    .row
                                        .col-md-12
                                            div(ng-repeat='provider in providers')
                                                .checkbox
                                                    label
                                                        input(type='checkbox', value='{{provider.value}}')
                                                        {{provider.label}}

        .row(ng-controller='ResultsController')
            .col-md-6.col-md-offset-3
                .container-fluid
                    .row
                        .panel.panel-default
                            .panel-heading Results
                            .panel-body
                                .container-fluid
                                    .row
                                        .col-md-12
                                            div(ng-repeat='result in results')
                                                .panel.panel-default
                                                    .panel-body
                                                        {{result.name}}


block scripts

    script(src='javascripts/Comparator/ComparatorModule.js')
    script(src='javascripts/Comparator/ParametersController.js')
    script(src='javascripts/Comparator/ResultsController.js')
